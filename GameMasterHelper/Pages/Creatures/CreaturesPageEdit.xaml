<Page x:Class="GameMasterHelper.Pages.Creatures.CreaturesPageEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameMasterHelper.Pages.Creatures"
      xmlns:user="clr-namespace:GameMasterHelper.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreaturesPageEdit">
    <Page.Resources>
        <Style x:Key="Default">
            <Setter Property="Control.Margin" Value="10 5 10 5" />
        </Style>
        <Style x:Key="AttrLabel">
            <Setter Property="ColumnDefinition.Width" Value="60" />
        </Style>
        <Style x:Key="DefaultText" BasedOn="{StaticResource Default}">
            <Setter Property="TextElement.FontSize" Value="15"/>
        </Style>
        <Style x:Key="BorderParagraph">
            <Setter Property="ItemsControl.BorderThickness" Value="0 1 0 0"/>
            <Setter Property="ItemsControl.BorderBrush" Value="#FFD2D2D2"/>
            <Setter Property="ItemsControl.Margin" Value="2"/>
        </Style>
    </Page.Resources>
    <Grid>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Visible" 
                      HorizontalScrollBarVisibility="Disabled">
            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button x:Name="bnSave" Content="Сохранить изменения"
                        Style="{StaticResource DefaultText}" Padding="3" Click="bnSave_Click"/>
                    <Button x:Name="bnDefault" Content="Вернуть значения по умолчанию"
                        Style="{StaticResource DefaultText}" Padding="3" Click="bnDefault_Click"/>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Имя/Название:" Style="{StaticResource DefaultText}"/>
                    <user:TextBoxWithPlaceholder x:Name="tbpName" Grid.Column="1" Placeholder="Например: Разбойник..."
                                     Style="{StaticResource DefaultText}"/>
                    <TextBlock Grid.Column="2" Text="Ур." Style="{StaticResource DefaultText}"/>
                    <ComboBox x:Name="cbLvl" Grid.Column="3" Style="{StaticResource Default}"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Описание:" Style="{StaticResource DefaultText}"/>
