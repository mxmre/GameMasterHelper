Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock  Grid.Row="1" Style="{StaticResource DefaultText}" x:Name="tbIntSkill1"
                                   Grid.Column="3" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left"/>
                        <ComboBox Grid.Column="4" Grid.Row="2" x:Name="cbIntSkill2"
Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock  Grid.Row="2" Style="{StaticResource DefaultText}" x:Name="tbIntSkill2"
                                   Grid.Column="3" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left"/>
                        <ComboBox Grid.Column="4" Grid.Row="3" x:Name="cbIntSkill3"
