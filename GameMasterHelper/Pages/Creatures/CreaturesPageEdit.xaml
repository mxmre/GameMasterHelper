                        <ComboBox Grid.Column="4" Grid.Row="3" x:Name="cbChaSkill3"
Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock  Grid.Row="3" Style="{StaticResource DefaultText}" x:Name="tbChaSkill3"
