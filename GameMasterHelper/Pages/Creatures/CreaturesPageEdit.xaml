Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="ХАР" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <user:DataCheckTextBox NotifyText="Значение характеристики должно находится в промежутке [0; 30]" x:Name="dctbCha" Style="{StaticResource Default}" Grid.Column="1"
                     Placeholder="Например: 1, 2, 10, 30" DataCheckEvent="dctbStr_DataCheckEvent"/>
                    </Grid>
                </StackPanel>
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Text="Хиты" Style="{StaticResource DefaultText}"/>
                    <user:DataCheckTextBox Grid.Column="1" x:Name="dctbHitDice"
                                           Placeholder="Например: 1к6, к20, 2к12+1" DataCheckEvent="dctbHitDice_DataCheckEvent"
                                           NotifyText="Выражение должно соответствовать: 1к6, к20, 2к12+1"
                                           Style="{StaticResource Default}"/>
                    <Button Grid.Column="2" x:Name="btnDefaultHp" Click="btnDefaultHp_Click"
                            Style="{StaticResource DefaultText}" Content="Сгенерировать" Padding="3" VerticalAlignment="Top"/>

                    <TextBlock Grid.Column="0" Grid.Row="1" Text="КД" Style="{StaticResource DefaultText}"/>
                    <user:DataCheckTextBox Grid.Column="1" Grid.Row="1" x:Name="dctbArmorClass"
                                           Style="{StaticResource Default}"
                       Placeholder="КД существа не может превышать 30!"
                       NotifyText="Итоговый класс брони не должен превышать 30" DataCheckEvent="dctbArmorClass_DataCheckEvent"/>
