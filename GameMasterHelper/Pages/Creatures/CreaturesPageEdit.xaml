                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource BorderParagraph}" Grid.ColumnSpan="5" Grid.RowSpan="1"/>
                        <ComboBox Grid.Column="4" x:Name="cbStrSkill0"
Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
