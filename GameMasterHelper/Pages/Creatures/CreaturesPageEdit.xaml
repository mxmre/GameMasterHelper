                            <ColumnDefinition Style="{StaticResource AttrLabel}" />
                            <ColumnDefinition Width="17*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
