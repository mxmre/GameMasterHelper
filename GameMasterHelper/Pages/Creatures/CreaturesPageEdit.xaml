Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock  Grid.Row="1" Style="{StaticResource DefaultText}" x:Name="tbDexSkill1"
                                   Grid.Column="3" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left"/>
