Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="МУД" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <user:DataCheckTextBox NotifyText="Значение характеристики должно находится в промежутке [0; 30]" x:Name="dctbWis" Style="{StaticResource Default}" Grid.Column="1"
  Placeholder="Например: 1, 2, 10, 30" DataCheckEvent="dctbStr_DataCheckEvent"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource AttrLabel}" />
                            <ColumnDefinition Width="17*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Style="{StaticResource BorderParagraph}" Grid.ColumnSpan="5" Grid.RowSpan="4"
                                BorderThickness="0 1 0 1"/>
                        <ComboBox Grid.Column="4" Grid.Row="0" x:Name="cbChaSkill0"
Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock  Grid.Row="0" Style="{StaticResource DefaultText}" x:Name="tbChaSkill0"
                                   Grid.Column="3" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left"/>
                        <ComboBox Grid.Column="4" Grid.Row="1" x:Name="cbChaSkill1"
Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
                        <TextBlock  Grid.Row="1" Style="{StaticResource DefaultText}" x:Name="tbChaSkill1"
                                   Grid.Column="3" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left"/>
                        <ComboBox Grid.Column="4" Grid.Row="2" x:Name="cbChaSkill2"
Style="{StaticResource DefaultText}" VerticalAlignment="Top"/>
