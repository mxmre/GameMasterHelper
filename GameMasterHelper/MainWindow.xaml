<Window x:Class="GameMasterHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameMasterHelper"
        xmlns:user_controls="clr-namespace:GameMasterHelper.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1200" WindowState="Maximized">
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl x:Name="MainTabs" Grid.Row ="1" SelectedIndex="3">
            <TabItem Header="Карта">
                
            </TabItem>
            <TabItem Header="Квесты"/>
            <TabItem Header="Бой"/>
            <TabItem Header="Существа">
                <Frame x:Name="CreaturesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem Header="Предметы"/>
            <TabItem Header="Генератор добычи"/>
        </TabControl>
    </Grid>
</Window>
